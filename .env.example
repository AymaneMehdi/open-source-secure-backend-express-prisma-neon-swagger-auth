# Database Configuration
# Replace with your actual database URL
# For Neon: postgresql://username:password@ep-example-123456.region.aws.neon.tech/databasename?sslmode=require
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/appdb?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
# Generate a secure random string for production
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET="your-super-secure-session-secret-change-this-in-production"

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google OAuth Configuration (optional)
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth Configuration (optional) 
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window